#!/usr/bin/env bash

script_root_dir="$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"
PROJECT_DIR="$(dirname $script_root_dir)"

source "$script_root_dir/utils/docker.sh"

$docker_command -f "$PROJECT_DIR/docker-compose.yml" -p portfolio --project-directory $PROJECT_DIR down
$docker_command -f "$PROJECT_DIR/docker-compose.yml" -p portfolio --project-directory $PROJECT_DIR build
